<% @title = "Login" %>
<% if flash[:error] %>
	<div><%=flash[:error]%></div>
<% end %>
<%= form_tag("post_login", :method => "post") do %>
	<%= label_tag(:text_val, "Enter username:") %>
	<%= text_field_tag(:text_val) %>
	<%= label_tag(:password, "Password: ")%>
	<%= password_field_tag(:password)%>
    <%= submit_tag("Submit") %>
<% end %>
<div><a href="/users/new">Click Here</a> to register and make your account!!!</div>